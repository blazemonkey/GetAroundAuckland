<prism:PrismApplication
    x:Class="GetAroundAuckland.Windows10.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:prism="using:Prism.Windows"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GetAroundAuckland.Windows10"
    RequestedTheme="Light">
    <prism:PrismApplication.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="White"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/AppResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </prism:PrismApplication.Resources>
</prism:PrismApplication>

